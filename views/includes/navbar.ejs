<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i {
    /* display: inline; */
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
    width: 420px;
    max-width: 100%;
  }
  /* Center search on large screens */
  @media (min-width: 992px) {
    .search-desktop {
      margin: 0 auto;
    }
    .search-mobile,
    #mobileSearch {
      display: none !important;
    }
  }
  @media (max-width: 991px) {
    .search-desktop {
      display: none !important;
    }
    .search-mobile {
      display: flex;
      justify-content: center;
      flex-grow: 1;
    }
    .search-toggle {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 42px;
      height: 42px;
      border-radius: 50%;
      background: linear-gradient(135deg, #fe424d, #ff7eb9);
      color: #fff;
      font-size: 1.2rem;
      cursor: pointer;
    }
    #mobileSearch {
      overflow: hidden;
      max-height: 0;
      transition: max-height 0.3s ease;
      display: none;
      padding: 10px;
      border-top: 1px solid #ddd;
    }
    #mobileSearch.active {
      display: block;
      max-height: 120px; /* expands downward */
      margin-bottom: 10px;
    }
    @media (max-width: 991px) {
      .navbar-collapse {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: #fff;
        z-index: 1000;
      }
      .navbar-nav .nav-link {
        padding: 0.75rem 1rem; /* spacing for mobile menu */
      }
    }
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-solid fa-compass"></i
    ></a>
    <div class="search-mobile d-lg-none">
      <div class="search-toggle" onclick="toggleSearch()">
        <i class="fa-solid fa-magnifying-glass"></i>
      </div>
    </div>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto search-desktop">
        <form class="d-flex" role="search" action="/listings" method="GET">
          <input
            class="form-control me-2 search-inp"
            type="search"
            name="q"
            value="<%= typeof search !== 'undefined' ? search : '' %>"
            placeholder="Search destinations"
            aria-label="Search"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Become a host</a>
        <% if(!currUser) { %>
        <a class="nav-link" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %> <% if(currUser) { %>
        <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<div id="mobileSearch" class="d-md-none">
  <form class="d-flex mt-2" role="search" action="/listings" method="GET">
    <input
      class="form-control me-2 search-inp"
      type="search"
      name="q"
      placeholder="Search destinations"
    />
    <button class="btn search-btn" type="submit">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
  </form>
</div>

<script>
  function toggleSearch() {
    document.getElementById("mobileSearch").classList.toggle("active");
  }
</script>
